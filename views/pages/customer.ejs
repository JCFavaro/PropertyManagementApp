<div class="container vh-90">
    <div class="row pt-3 d-flex flex-row justify-content-around">
        <% for (let customer of customers) { %>
            <div class="col-lg-3 col-md-5 col-sm-4 m-4 p-2">
                <div class="card customerCards p-2 mt-2 mb-2">
                    <a class="fas fa-times-circle text-danger align-self-end mr-2" name="id" role="button"
                       href="/deleteCustomer/<%- customer.id %>"></a>
                    <div class="card-body p-0">
                        <h4 class="pt-1 text-center"><%- customer.fullName %> </h4>
                        <div class="row">
                            <div class="col-7">
                                <p>Miembros: </p>
                                <p>Ciudad: </p>
                                <p>Patente: </p>
                            </div>
                            <div class="col-5 font-weight-bold pl-0">
                                <p><%- customer.members %></p>
                                <p><%- customer.city %></p>
                                <p><%- customer.licensePlate %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>
