<form id="formLogin" method="POST" action="/newStay/<%- req.params.id %>"
      class="d-flex flex-column text-center justify-content-center align-items-center pt-5 pb-5">

    <div class="form-group w-25">
        <label for="guestID"><b>Customer</b></label>
        <br>
        <select name="guestID" id="guestID">
            <% for (let customer of customers){ %>
                <option value="<%- customer.id %>"> <%- customer.fullName %></option>
            <% } %>
        </select>
    </div>

    <div class="form-group w-25">
        <label for="initialDate"><b>Init Date</b></label>
        <input type="date" class="form-control" id="initialDate" name="initialDate">
    </div>

    <div class="form-group w-25">
        <label for="finalDate"><b>Final Date</b></label>
        <input type="date" class="form-control" id="finalDate" name="finalDate">
    </div>

    <div class="form-group w-25">
        <label for="paymentMethod"><b>Method of Payment</b></label>
        <br>
        <select name="paymentMethod">
            <option value="Efectivo">Cash</option>
            <option value="Crédito">Credit</option>
            <option value="Débito">Debit</option>
        </select>
    </div>

    <div class="form-group w-25">
        <label for="valuePerDay"><b>Value Per Day</b></label>
        <input type="number" class="form-control" id="valuePerDay" name="valuePerDay">
    </div>

    <button type="submit" class="btn-lg btn-success w-25">Create</button>

</form>
