<div class="container vh-90">
    <div class="row pt-3 d-flex flex-row justify-content-around">
        <% for (let estadia of estadias) { %>
            <div class="col-lg-3 col-md-5 col-sm-6 m-4 p-2">
                <div class="card rentalCards p-2 mt-2 mb-2">
                    <a class="fas fa-times-circle text-danger align-self-end mr-2" name="id" role="button"
                       href="/deleteEstadia/<%- estadia.id %>"></a>
                    <div class="card-body p-0">
                        <h4 class="pt-1 text-center"><%- estadia.guest.fullName %> </h4>
                        <div class="row">
                            <div class="col-7">
                                <p>Desde: </p>
                                <p>Hasta: </p>
                                <p>Forma de pago: </p>
                                <p>Valor por día: </p>
                                <p>Valor total: </p>
                                <p>Seña 20%: </p>
                            </div>
                            <div class="col-5 font-weight-bold d-flex flex-column align-items-start pl-0">
                                <p><%- estadia.initialDate.split('T')[0] %></p>
                                <p><%- estadia.finalDate.split('T')[0] %></p>
                                <p><%- estadia.paymentMethod %></p>
                                <p><%- estadia.valuePerDay %></p>
                                <p><%- estadia.totalValue %></p>
                                <p><%- estadia.downPayment %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

