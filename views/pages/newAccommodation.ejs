<form id="formLogin" method="POST" action="/newAccommodation" enctype="multipart/form-data"
      class="d-flex flex-column text-center align-items-center py-2">

    <div class="form-group w-25">
        <label for="name"><b>Name</b></label>
        <input type="text" class="form-control" id="name" name="name">
    </div>

    <div class="form-group w-25">
        <label for="capacity"><b>Capacity</b></label>
        <input type="text" class="form-control" id="capacity" name="capacity">
    </div>

    <div class="form-group w-25">
        <label for="garage"><b>Garage</b></label>
        <br>
        <input type="radio" name="garage" value="true" class="pr-3"> SI
        <input type="radio" name="garage" value="false" class="ml-3"> NO
    </div>

    <div class="form-group w-25">
        <label for="type"><b>Type</b></label>
        <br>
        <select name="type" id="type">
            <option value="house">House</option>
            <option value="apartment">Apartment</option>
            <option value="cabin">Cabin</option>
        </select>
    </div>

    <div class="form-group w-25">
        <label for="address"><b>Address</b></label>
        <input type="text" class="form-control" id="address" name="address">
    </div>

    <button type="submit" class="btn-lg btn-success w-25">Create</button>

</form>
