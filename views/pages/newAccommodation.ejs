<form id="formLogin" method="POST" action="/newAccommodation" enctype="multipart/form-data"
      class="d-flex flex-column text-center align-items-center py-2">

    <div class="form-group w-25">
        <label for="nombre"><b>Name</b></label>
        <input type="text" class="form-control" id="nombre" name="nombre">
    </div>

    <div class="form-group w-25">
        <label for="capacidad"><b>Capacity</b></label>
        <input type="text" class="form-control" id="capacidad" name="capacidad">
    </div>

    <div class="form-group w-25">
        <label for="garage"><b>Garage</b></label>
        <br>
        <input type="radio" name="garage" value="true" class="pr-3"> SI
        <input type="radio" name="garage" value="false" class="ml-3"> NO

    </div>

    <div class="form-group w-25">
        <label for="imagen"><b>Image</b></label>
        <input type="file" class="form-control" id="imagen" name="imagen">
    </div>

    <div class="form-group w-25">
        <label for="direccion"><b>Address</b></label>
        <input type="text" class="form-control" id="direccion" name="direccion">
    </div>

    <button type="submit" class="btn-lg btn-success w-25">Create</button>

</form>
