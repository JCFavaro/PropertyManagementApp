<div class="container text-center vh-100">

    <h1 class="display-4 pt-1 mt-2">Alquileres del Valle</h1>

        <div id="homepage" class="row mt-3 border-top border-dark">

            <% for (let alojamiento of alojamientos) { %>

                <div class="col-lg-6 col-md-12">
                    <h2 class="pt-2 display-4 mt-2"><%- alojamiento.nombre %> </h2>
                    <div class="card homeCards border py-3 rounded-pill mb-2">
                        <img class="card-img-top align-self-center" alt="Casa" src=<%- alojamiento.imagenUrl %>>
                        <div class="card-body align-middle d-flex flex-column align-items-center p-0">
                            <a class="btn btn-dark text-white my-3" role="button">Ver estadías</a>
                            <a class="btn btn-dark text-white my-1" role="button">Ingresar nueva estadía</a>
                        </div>
                    </div>
                </div>

            <% } %>

        </div>

</div>
