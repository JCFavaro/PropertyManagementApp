<div class="container text-center vh-90">

    <h1 class="display-4 p-3 border-bottom border-white">Company Name</h1>

    <div id="homepage" class="row pt-3">
        <% if (req.session.user){ %>
            <% for (let accommodation of accommodations) { %>
                <div class="col-lg-4 col-md-6 col-sm-6 mb-3 d-flex justify-content-center">
                    <div class="card homeCards my-2 p-2">
                        <a class="fas fa-times-circle text-danger align-self-end" role="button"
                           href="/deleteAccommodation/<%- accommodation.id %>"></a>
                        <h2><%- accommodation.name %> </h2>
                        <img class="card-img-top align-self-center" src="/images/<%= accommodation.image %>">
                        <div class="card-body align-middle d-flex flex-column align-items-center">
                            <a class="btn btn-dark text-white" role="button" href="/stay/<%- accommodation.id %>">Show Stays</a>
                            <a class="btn btn-dark text-white mt-2" href="/newStay/<%- accommodation.id %>"
                               role="button">Add New Stay</a>
                        </div>
                    </div>
                </div>

            <% } %>
    </div>
    <% } else { %>
        <div class="pt-2 mt-5 w-100">
            <h2 class="pb-5">Login to view content</h2>

            <div class="d-flex flex-row justify-content-center">
            <a href="/login" type="submit" class="btn btn-success btn-lg mx-2">Login</a>
            <a href="/signup" type="submit" class="btn btn-danger btn-lg mx-2">Sign Up</a>
            </div>
        </div>
    <% } %>

</div>
