<form id="formLogin" method="POST" action="/newCustomer" class="d-flex flex-column justify-content-center">

    <div class="d-flex flex-column align-items-center text-center">
        <div class="form-group w-25">
            <label for="fullName"><b>Name & Last Name</b></label>
            <input type="text" class="form-control" id="fullName" name="fullName">
        </div>

        <div class="form-group w-25">
            <label for="members"><b>Amount of people</b></label>
            <input type="number" class="form-control" id="members" name="members">
        </div>

        <div class="form-group w-25">
            <label for="city"><b>City</b></label>
            <input type="text" class="form-control" id="city" name="city">
        </div>

        <div class="form-group w-25">
            <label for="licensePlate"><b>License Plate</b></label>
            <input type="text" class="form-control" id="licensePlate" name="licensePlate">
        </div>

        <button type="submit" class="btn-lg btn-success w-25">Register In The System</button>

    </div>
</form>

